<?xml version="1.0" encoding="UTF-8" ?>
<profiles>
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>udp_transport</transport_id>
      <type>UDPv4</type>
      <interfaceWhiteList>
        <!-- Contenedor interno -->
        <address>127.0.0.1</address>
        <address>172.17.0.1</address>

        <!-- Red de Jetson/PC -->
        <address>192.168.137.1</address>    <!-- Gateway del PC -->
        <address>192.168.137.151</address>  <!-- PC actual -->
        <address>192.168.55.1</address>     <!-- Jetson USB host -->
        <address>192.168.55.100</address>   <!-- Jetson device -->
      </interfaceWhiteList>
    </transport_descriptor>
  </transport_descriptors>

  <participant profile_name="udp_profile" is_default_profile="true">
    <rtps>
      <userTransports>
        <transport_id>udp_transport</transport_id>
      </userTransports>
      <useBuiltinTransports>false</useBuiltinTransports>
    </rtps>
  </participant>
</profiles>

<?xml version="1.0" encoding="UTF-8" ?>
<profiles>
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>udp_transport</transport_id>
      <type>UDPv4</type>
      <interfaceWhiteList>
        <!-- Interfaces internas Docker -->
        <address>127.0.0.1</address>
        <address>172.17.0.1</address>

        <!-- Interfaces Jetson -->
        <address>192.168.55.100</address>
        <address>192.168.55.1</address>

        <!-- Interfaces PC (GUI host) -->
        <address>192.168.137.151</address>
        <address>192.168.137.1</address>
        <address>192.168.0.1</address> <!-- backup: LAN general -->

        <!-- Broadcast universal (fallback) -->
        <address>0.0.0.0</address>
      </interfaceWhiteList>
    </transport_descriptor>
  </transport_descriptors>

  <participant profile_name="udp_profile" is_default_profile="true">
    <rtps>
      <userTransports>
        <transport_id>udp_transport</transport_id>
      </userTransports>
      <useBuiltinTransports>false</useBuiltinTransports>
    </rtps>
  </participant>
</profiles>
